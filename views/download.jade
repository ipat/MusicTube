extends layout

block content
	div(class='full-page black-mask', style='background:url(' + albumart +') center center no-repeat	;background-size:   cover; ')
	div(class='container center')
		div(class="headSpace")
			div(class="col-sm-12")
				img(src=albumart, style="height:22em; box-shadow: 0px 2px 5px rgba(0,0,0,0.7); position:relative")
			br(style="clear:both;")
			div(class="col-sm-12")
				div(class='header', style="font-size: 2.4em; color:white;") #{musicName}
				div(class="col-sm-3 col-sm-offset-3")
					a(href="/")
						button(class="new-yellow-button" style="width: 100%;") Back to home
				div(class="col-sm-3")
					a(href="" + songName download)
						button(class="new-blue-button" style="width: 100%;") Download
